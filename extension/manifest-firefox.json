{
  "manifest_version": 2,
  "name": "DocuFlux Capture",
  "version": "1.0.0",
  "description": "Capture authenticated web content and send to DocuFlux for conversion",
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "DocuFlux Capture"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "docuflux-capture@docuflux",
      "strict_min_version": "109.0"
    }
  }
}
