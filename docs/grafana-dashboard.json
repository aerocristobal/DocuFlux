{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "DocuFlux Prometheus datasource",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {"type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0"},
    {"type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0"},
    {"type": "panel", "id": "timeseries", "name": "Time series", "version": ""},
    {"type": "panel", "id": "stat", "name": "Stat", "version": ""},
    {"type": "panel", "id": "gauge", "name": "Gauge", "version": ""},
    {"type": "panel", "id": "table", "name": "Table", "version": ""}
  ],
  "title": "DocuFlux — System Health",
  "uid": "docuflux-health",
  "description": "Real-time monitoring for DocuFlux: conversion throughput, queue depth, GPU/CPU, and error rates.",
  "tags": ["docuflux"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {"from": "now-1h", "to": "now"},
  "templating": {
    "list": [
      {
        "name": "instance",
        "label": "Instance",
        "type": "query",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "query": "label_values(docuflux_conversion_total, instance)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Conversions / minute",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "targets": [
        {
          "expr": "sum(rate(docuflux_conversion_total{status=\"success\"}[1m])) * 60",
          "legendFormat": "Success"
        },
        {
          "expr": "sum(rate(docuflux_conversion_total{status=\"failure\"}[1m])) * 60",
          "legendFormat": "Failure"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {"lineWidth": 2}
        },
        "overrides": [
          {"matcher": {"id": "byName", "options": "Failure"}, "properties": [{"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}]},
          {"matcher": {"id": "byName", "options": "Success"}, "properties": [{"id": "color", "value": {"fixedColor": "green", "mode": "fixed"}}]}
        ]
      }
    },
    {
      "id": 2,
      "title": "Queue Depth",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "targets": [
        {
          "expr": "docuflux_queue_depth{queue_name=\"high_priority\"}",
          "legendFormat": "high_priority"
        },
        {
          "expr": "docuflux_queue_depth{queue_name=\"default\"}",
          "legendFormat": "default"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "short", "min": 0}}
    },
    {
      "id": 3,
      "title": "Active Worker Tasks",
      "type": "stat",
      "gridPos": {"x": 0, "y": 8, "w": 4, "h": 4},
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "targets": [{"expr": "docuflux_worker_tasks_active", "legendFormat": "Active"}],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {"mode": "absolute", "steps": [
            {"color": "green", "value": null},
            {"color": "yellow", "value": 5},
            {"color": "red", "value": 10}
          ]}
        }
      }
    },
    {
      "id": 4,
      "title": "Error Rate (last 5m)",
      "type": "stat",
      "gridPos": {"x": 4, "y": 8, "w": 4, "h": 4},
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "targets": [{"expr": "sum(rate(docuflux_conversion_failures_total[5m])) * 300", "legendFormat": "Errors"}],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {"mode": "absolute", "steps": [
            {"color": "green", "value": null},
            {"color": "yellow", "value": 1},
            {"color": "red", "value": 5}
          ]}
        }
      }
    },
    {
      "id": 5,
      "title": "GPU Utilization",
      "type": "gauge",
      "gridPos": {"x": 8, "y": 8, "w": 4, "h": 4},
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "targets": [{"expr": "docuflux_gpu_utilization_percent", "legendFormat": "GPU %"}],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {"mode": "absolute", "steps": [
            {"color": "green", "value": null},
            {"color": "yellow", "value": 70},
            {"color": "red", "value": 90}
          ]}
        }
      }
    },
    {
      "id": 6,
      "title": "GPU Memory Used",
      "type": "gauge",
      "gridPos": {"x": 12, "y": 8, "w": 4, "h": 4},
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "targets": [{"expr": "docuflux_gpu_memory_used_bytes / docuflux_gpu_memory_total_bytes * 100", "legendFormat": "VRAM %"}],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {"mode": "absolute", "steps": [
            {"color": "green", "value": null},
            {"color": "yellow", "value": 80},
            {"color": "red", "value": 95}
          ]}
        }
      }
    },
    {
      "id": 7,
      "title": "Disk Usage",
      "type": "gauge",
      "gridPos": {"x": 16, "y": 8, "w": 4, "h": 4},
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "targets": [{"expr": "docuflux_disk_usage_percent", "legendFormat": "Disk %"}],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {"mode": "absolute", "steps": [
            {"color": "green", "value": null},
            {"color": "yellow", "value": 80},
            {"color": "red", "value": 95}
          ]}
        }
      }
    },
    {
      "id": 8,
      "title": "Total Jobs (24h)",
      "type": "stat",
      "gridPos": {"x": 20, "y": 8, "w": 4, "h": 4},
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "targets": [{"expr": "increase(docuflux_conversion_total[24h])", "legendFormat": "Jobs"}],
      "fieldConfig": {"defaults": {"unit": "short"}}
    },
    {
      "id": 9,
      "title": "Conversion Duration (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 12, "w": 16, "h": 8},
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "targets": [
        {"expr": "histogram_quantile(0.50, sum(rate(docuflux_conversion_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p50"},
        {"expr": "histogram_quantile(0.95, sum(rate(docuflux_conversion_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p95"},
        {"expr": "histogram_quantile(0.99, sum(rate(docuflux_conversion_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p99"}
      ],
      "fieldConfig": {"defaults": {"unit": "s"}}
    },
    {
      "id": 10,
      "title": "Conversions by Format (last hour)",
      "type": "table",
      "gridPos": {"x": 16, "y": 12, "w": 8, "h": 8},
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "targets": [
        {
          "expr": "sum by (format_from, format_to, status) (increase(docuflux_conversion_total[1h]))",
          "legendFormat": "{{format_from}} → {{format_to}} ({{status}})",
          "instant": true
        }
      ],
      "fieldConfig": {"defaults": {"unit": "short"}}
    }
  ]
}
